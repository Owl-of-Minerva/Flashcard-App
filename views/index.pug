extends sidebar.pug
block scripts
    script(src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.23/browser.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.7/react.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/react/0.14.7/react-dom.js")
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
    script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.js")
    link(rel="stylesheet" href="https://code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css")
    link(rel="stylesheet" href="/stylesheets/index.css")
    link(rel="stylesheet" href="/stylesheets/buttons.css")
    link(rel="stylesheet" href="/stylesheets/ring_navigation.css")
block content

    div
        canvas(id="myCanvas") Translate from
        select(id="source")
            option(value="hi" selected="selected") Hindi
            option(value="zh-cn") Chinese
            option(value="en") English

        label to
        select(id="target")
            option(value="hi") Hindi
            option(value="zh-cn") Chinese
            option(value="en" selected="selected") English


    div(class="paper")
        div(class="paper-content")
            textarea(type="text" id="translate_input" placeholder="" name="translate_input") Please enter the text you want to study here.
            button(id="complete_input" class="") Done
    p(id="instruction" hidden) Please click on the word you want to translate
    p(id="user_input")
    ul(id="translation_list" download)
        each translation in translations= translations
            div(class="translation_div")
                form(action="/add/"+translation.source method="get")
                    li(class="translation_result")
                        input(type="text" name="source" class="source" value=translation.source)
                        label :
                        input(type="text" name="result" class="result" value=translation.result)
                    button(type="submit") Add to Lib
                    button(class="remove_card") Remove from List
    div(class="buttons")
        button(id="remove_translation_list" class="fill") Remove All Words
        button(id="generate_list" class="fill") Generate Vocabulary List
        button(id="add_all_list" class="fill") Add All Words
    p(id="generated_list")



